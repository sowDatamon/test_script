# Datos del servidor SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=usuario@example.com
SMTP_PASSWORD=tu_contraseña_o_app_password

# Correos
FROM_EMAIL=usuario@example.com
TO_EMAIL=destino@example.com, otro@example.com

# Contenido del correo
EMAIL_SUBJECT=Prueba de correo automático
EMAIL_BODY=Este es un correo enviado automáticamente por el servicio.

# Intervalo en segundos entre envíos (por defecto 3600 = 1h)
INTERVAL_SECONDS=3600
